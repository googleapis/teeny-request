{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2016"
        ],
        "module": "commonjs",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2016",
        "rootDir": ".",
        "outDir": "build",
        "noImplicitThis": false
    },
    "include": [
        "src/*.ts",
        "test/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}